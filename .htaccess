Redirect 301 /test-redirect https://jbdevweb.fr/

RewriteEngine On

# 1️⃣ Forcer HTTPS + supprimer www
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} ^www\.jbdevweb\.fr$ [NC]
RewriteRule ^ https://jbdevweb.fr%{REQUEST_URI} [L,R=301]

# 2️⃣ Rediriger les vraies requêtes .html vers version propre
RewriteCond %{THE_REQUEST} \s/([^.]+)\.html [NC]
RewriteRule ^ %1 [L,R=301]

# 3️⃣ Servir les fichiers .html sans extension (interne uniquement)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]
